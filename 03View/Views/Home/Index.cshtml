@using PagedList;                   @*先引進兩個pagedlist*@
@using PagedList.Mvc;
@model IPagedList<_03View.Models.NightMarket>

@{
    ViewBag.Title = "南部地區各大夜市";
}

<h2 class="alert-info">南部地區各大夜市</h2>

<p>
    @Html.ActionLink("新增夜市資料", "Create")
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                夜市編號
                @*@Html.DisplayNameFor(model => model.id)*@
            </th>
            <th>
                夜市名稱
                @*@Html.DisplayNameFor(model => model.name)*@
            </th>
            <th>
                夜市地址
                @*@Html.DisplayNameFor(model => model.address)*@
            </th>
            <th>
                夜市照片
            </th>
            <th>
                地圖
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.id
                @*@Html.DisplayFor(modelItem => item.id)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                <img src="~/images/@(item.id).jpg" width="200px" />
            </td>
            <td>
                <a href="https://www.google.com.tw/maps/place/@(item.address)" target="_blank" class="btn btn-success">查看地圖</a>
            </td>
        </tr>
    }

</table>
<p>@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</p>