@*@model IEnumerable<_06ViewModel.Models.員工>*@

@model _06ViewModel.ViewModels.EmpTitle
<style>
    .mb {
        margin-bottom:10px;
    }
</style>
@{
    ViewBag.Title = "Index";
}


<h1> </h1>
<div class="row">
    <div class="col-xs-2 text-center">
        @foreach (var item in Model.JobTitle) {
            <p >@Html.ActionLink(item.職稱, "Index", new { jobTitle=item.職稱代碼},new { @class="btn btn-info col-xs-12 mb"})</p>
        }
    </div>
    <div class="col-xs-10">
            
        <div class="row">
            <h3 class="alert alert-info text-center" >@ViewBag.jobTitle123</h3>
            <p >
                @Html.ActionLink("新增員工", "Create",new { jobTitle=ViewBag.jobTitleID},new { @class="btn btn-success mb"})
            </p>
            @foreach (var item in Model.Employee)
            {
                <div class="col-xs-3 col-xs-offset-1 thumbnail">
                    <h2 class="text-center ">
                        @Html.DisplayFor(modelItem => item.姓名)
                    </h2>
                    <h3 class="text-center text-success">
                        @Html.DisplayFor(modelItem => item.名)
                    </h3>
                    <h3 class="text-center text-primary">
                        @Html.DisplayFor(modelItem => item.稱呼)
                    </h3>
                    <p class="text-center text-primary">
                        @Html.ActionLink("詳細", "Details", new { empid = item.員工編號 ,jobTitle=ViewBag.jobTitleID},new { @class="btn btn-info"}) |
                        @Html.ActionLink("刪除", "Delete", new { id = item.員工編號 ,jobTitle=ViewBag.jobTitleID},new { @class="btn btn-danger" ,onclick="return confirm('確認要刪除嗎？')"})
                    </p>
                </div>
            }
        </div>

    </div>
</div>

